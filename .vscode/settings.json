{
  // Make our custom profile the default for this workspace
  "terminal.integrated.defaultProfile.windows": "Conda (mri-visualizer)",

  // Define a custom PowerShell profile that runs conda activate on launch
  "terminal.integrated.profiles.windows": {
    "Conda (mri-visualizer)": {
      "source": "PowerShell",
      "args": [
        "-NoExit",
        "-Command",
        "conda activate C:\\Users\\Lumbar_Life\\Documents\\lsuhs\\mri-visualizer\\.conda"
      ]
    }
  },

  // Point Python extension at the same interpreter and stop it from doing its own activation
  "python.defaultInterpreterPath": "C:\\Users\\Lumbar_Life\\Documents\\lsuhs\\mri-visualizer\\.conda\\python.exe",
  "python.terminal.activateEnvironment": false
}
